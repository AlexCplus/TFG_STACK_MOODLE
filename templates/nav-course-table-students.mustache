<div id="selection-course" class="dropdown">
    <span id="course-stack-id" hidden="hidden"> -1 </span>
    <button type="button" class="btn btn-outline-secondary dropdown-toggle icon-no-margin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="icon fa fa-sort-amount-asc fa-fw " aria-hidden="true"></i>
        
        Curso Seleccionado
    </button>
    <div class="box py-3 generalbox" id="render-chart">
        {{{selection}}}
    </div>
    <div id="menu-courses" role="menu" class="dropdown-menu" data-show-active-item data-skip-active-class="true">
        {{#courses}}
            <a id="course-{{id}}" class="dropdown-item" id="{{id}}">
                {{shortname}}
            </a>
        {{/courses}}
    </div>
</div>

